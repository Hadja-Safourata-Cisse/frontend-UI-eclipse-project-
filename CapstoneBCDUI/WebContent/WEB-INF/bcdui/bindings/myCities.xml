<?xml version="1.0" encoding="UTF-8"?>
<BindingSet id="myCities" table="tb_worldcities"
		dbSourceName="jdbc/postgres"
		xmlns="http://www.businesscode.de/schema/bcdui/bindings-1.0.0"
		xmlns:wrs="http://www.businesscode.de/schema/bcdui/wrs-1.0.0">


		<C id="city" caption="City">
				<Column>city</Column>
		</C>

		<C id="city_ascii" caption="City_ascii">
				<Column>city_ascii</Column>
		</C>

		<C id="lat" caption="Lat">
				<Column>lat</Column>
		</C>

		<C id="lng" caption="Lng">
				<Column>lng</Column>
		</C>

		<C id="country" caption="Country">
				<Column>country</Column>
		</C>

		<C id="iso2" caption="Iso2">
				<Column>iso2</Column>
		</C>

		<C id="iso3" caption="Iso3">
				<Column>iso3</Column>
		</C>

		<C id="admin_name" caption="Admin_name">
				<Column>admin_name</Column>
		</C>


		<C id="capital" caption="Capital">
				<Column>capital</Column>
		</C>

		<C id="population" caption="Population">
				<Column>population</Column>
		</C>
		
		<C id="id" caption="Id" isKey="true"><Column>id</Column></C>

		<C id="distancetocologne" caption="distancetocologne">
				<Column>distancetocologne</Column>
		</C>
		

		<SubjectSettings>
				<Security>
						<Operation permission="bindings:update:tb_worldcities" name="write" />
				</Security>
				<SubjectFilters>
						<SubjectFilter type="geo:ctr" />
				</SubjectFilters>
		</SubjectSettings>

</BindingSet>